    <script>
        document.addEventListener('DOMContentLoaded', () => {
            initAccordions();
            
            showSection('processos');
            showTool('processos', 'kanban');
        });

        function initAccordions() {
            const headers = document.querySelectorAll('.accordion-header');
            headers.forEach(header => {
                header.addEventListener('click', () => {
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('.icon');
                    
                    if (header.classList.contains('active')) {
                        header.classList.remove('active');
                        icon.textContent = '+';
                    } else {
                        
                        const allActiveHeaders = document.querySelectorAll('.accordion-header.active');
                        allActiveHeaders.forEach(activeHeader => {
                            activeHeader.classList.remove('active');
                            activeHeader.querySelector('.icon').textContent = '+';
                        });
                        
                        header.classList.add('active');
                        icon.textContent = '‚àí';
                    }
                });
            });
        }

        function showSection(sectionId) {
            
            document.querySelectorAll('.main-section').forEach(section => {
                section.classList.add('hidden');
            });
            document.getElementById(`section-${sectionId}`).classList.remove('hidden');

            
            document.querySelectorAll('.main-nav-card').forEach(card => {
                if (card.dataset.section === sectionId) {
                    card.classList.add('active');
                } else {
                    card.classList.remove('active');
                }
            });
        }

        function showTool(sectionId, toolId) {
            const section = document.getElementById(`section-${sectionId}`);
            
            
            section.querySelectorAll('.tool-content').forEach(tool => {
                tool.classList.add('hidden');
            });
            section.querySelector(`#tool-${toolId}`).classList.remove('hidden');

            
            section.querySelectorAll('.sub-nav-button').forEach(button => {
                if (button.dataset.tool === toolId) {
                    button.classList.add('active');
                } else {
                    button.classList.remove('active');
                }
            });
            
            
            section.querySelectorAll('.accordion-header.active').forEach(header => {
                header.classList.remove('active');
                header.querySelector('.icon').textContent = '+';
            });
        }
    </script>

</body>
</html>
