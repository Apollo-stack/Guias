    <script>
        // --- DATA & STATE ---

        const workflowData = [
            {
                id: 'sync',
                title: '1. Sincronizar (Start)',
                desc: 'Garanta que seu PC est√° atualizado com a nuvem antes de come√ßar.',
                command: 'git checkout main\ngit pull origin main',
                explanation: 'Nunca comece um trabalho novo com c√≥digo velho. V√° para a base (main) e puxe (pull) as novidades.'
            },
            {
                id: 'branch',
                title: '2. Criar Universo (Branch)',
                desc: 'Crie uma linha do tempo paralela para n√£o quebrar a principal.',
                command: 'git checkout -b feature/nova-tarefa',
                explanation: 'O comando `-b` cria e j√° entra na branch. Use nomes descritivos como `fix/login` ou `feature/botao`.'
            },
            {
                id: 'work',
                title: '3. Trabalhar & Salvar',
                desc: 'Edite arquivos e crie pontos de salvamento.',
                command: 'git add .\ngit commit -m "Cria componente de bot√£o"',
                explanation: '`add .` prepara tudo. `commit` grava no hist√≥rico da sua branch. Fa√ßa commits pequenos e focados.'
            },
            {
                id: 'push',
                title: '4. Enviar (Push)',
                desc: 'Mande sua branch paralela para o GitHub.',
                command: 'git push origin feature/nova-tarefa',
                explanation: 'A nuvem ainda n√£o conhece sua branch nova. Esse comando cria ela l√° no GitHub com seu c√≥digo.'
            },
            {
                id: 'pr',
                title: '5. Pull Request (PR)',
                desc: 'A√ß√£o no Site: Pedir para juntar o c√≥digo.',
                command: '# No navegador (GitHub):\n1. Clique em "Compare & pull request"\n2. Escreva o que voc√™ fez\n3. Clique em "Create PR"',
                explanation: '√â aqui que a m√°gica acontece. O PR avisa o time (ou seu eu futuro) que algo est√° pronto para revis√£o.'
            },
            {
                id: 'merge',
                title: '6. Merge & Limpeza',
                desc: 'Aprovar e apagar a branch antiga.',
                command: '# No GitHub: Bot√£o "Merge pull request"\n\n# No Terminal (Depois):\ngit checkout main\ngit pull origin main\ngit branch -d feature/nova-tarefa',
                explanation: 'Depois de mergear no site, seu PC local fica desatualizado. Voc√™ precisa voltar pra main, puxar o c√≥digo novo (que agora inclui o que voc√™ fez) e apagar a branch velha.'
            }
        ];

        const cheatSheetData = [
            { cat: 'setup', cmd: 'git config --global user.name "Nome"', desc: 'Define seu nome para commits.' },
            { cat: 'setup', cmd: 'git config --global user.email "email@..."', desc: 'Define email (mesmo do GitHub).' },
            { cat: 'setup', cmd: 'git init', desc: 'Inicia o Git na pasta atual.' },
            { cat: 'setup', cmd: 'git clone [url]', desc: 'Baixa um projeto completo.' },
            { cat: 'daily', cmd: 'git status', desc: 'O GPS. Mostra o que mudou e onde voc√™ est√°.' },
            { cat: 'daily', cmd: 'git checkout -b [nome]', desc: 'Cria e muda para nova branch.' },
            { cat: 'daily', cmd: 'git add .', desc: 'Prepara todos os arquivos para o commit.' },
            { cat: 'daily', cmd: 'git commit -m "msg"', desc: 'Salva a vers√£o com uma mensagem.' },
            { cat: 'daily', cmd: 'git push origin [branch]', desc: 'Envia a branch para a nuvem.' },
            { cat: 'daily', cmd: 'git pull origin main', desc: 'Baixa atualiza√ß√µes da main.' },
            { cat: 'emergency', cmd: 'git log --oneline', desc: 'V√™ hist√≥rico resumido.' },
            { cat: 'emergency', cmd: 'git restore [arquivo]', desc: 'Desfaz altera√ß√µes n√£o salvas num arquivo.' },
            { cat: 'emergency', cmd: 'git stash', desc: 'Guarda mudan√ßas temporariamente num "bolso".' },
            { cat: 'emergency', cmd: 'git stash pop', desc: 'Recupera mudan√ßas do "bolso".' }
        ];

        // --- CHART.JS SETUP ---

        let radarChart;

        function initChart() {
            const ctx = document.getElementById('skillsChart').getContext('2d');
            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Commits', 'Issues', 'Code Review', 'Pull Requests'],
                    datasets: [{
                        label: 'Seu Perfil',
                        data: [100, 0, 0, 0], // Starting as Solo
                        backgroundColor: 'rgba(34, 197, 94, 0.2)',
                        borderColor: 'rgba(34, 197, 94, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(34, 197, 94, 1)',
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: '#e2e8f0' },
                            grid: { color: '#e2e8f0' },
                            pointLabels: {
                                font: { size: 12, family: "'Inter', sans-serif", weight: '600' },
                                color: '#475569'
                            },
                            suggestedMin: 0,
                            suggestedMax: 100,
                            ticks: { display: false } // Hide numbers for cleaner look
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        function updateChart(mode) {
            const caption = document.getElementById('chartCaption');
            if (mode === 'solo') {
                radarChart.data.datasets[0].data = [100, 5, 5, 5];
                radarChart.data.datasets[0].label = 'Modo Solo';
                caption.innerText = "Visualizando: Perfil Solo (Muitos commits, pouca gest√£o)";
            } else {
                radarChart.data.datasets[0].data = [60, 80, 80, 80];
                radarChart.data.datasets[0].label = 'Modo Pro';
                caption.innerText = "Visualizando: Perfil Pro (Equil√≠brio entre codar e colaborar)";
            }
            radarChart.update();
        }

        // --- WORKFLOW UI ---

        function renderWorkflow() {
            const container = document.getElementById('workflowSteps');
            container.innerHTML = '';

            workflowData.forEach((step, index) => {
                const div = document.createElement('div');
                div.className = `step-card p-4 rounded-lg border border-slate-200 bg-white flex items-start gap-4 ${index === 0 ? 'active' : ''}`;
                div.onclick = () => activateStep(index);
                div.innerHTML = `
                    <div class="flex-shrink-0 w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center font-bold text-slate-600 text-sm border border-slate-300">
                        ${index + 1}
                    </div>
                    <div>
                        <h4 class="font-bold text-slate-800">${step.title}</h4>
                        <p class="text-sm text-slate-500 mt-1">${step.desc}</p>
                    </div>
                `;
                container.appendChild(div);
            });

            // Initialize first step
            activateStep(0);
        }

        function activateStep(index) {
            // Update UI styles
            const cards = document.querySelectorAll('.step-card');
            cards.forEach(c => c.classList.remove('active', 'border-green-500', 'bg-green-50'));
            cards[index].classList.add('active', 'border-green-500', 'bg-green-50');

            // Update Terminal Content
            const step = workflowData[index];
            const terminal = document.getElementById('terminalContent');
            
            // formatting commands for display
            const cmdHtml = step.command.split('\n').map(line => {
                if (line.startsWith('#')) return `<span class="text-slate-500">${line}</span>`;
                return `<span class="text-green-400 font-bold">${line}</span>`;
            }).join('<br>');

            terminal.innerHTML = `
                <div class="fade-in">
                    <div class="mb-4 border-b border-slate-700 pb-2">
                        <strong class="text-white text-lg">üìù ${step.title}</strong>
                        <p class="text-slate-400 text-xs mt-1 leading-relaxed">${step.explanation}</p>
                    </div>
                    <div class="font-mono text-sm leading-6">
                        ${cmdHtml}
                    </div>
                </div>
            `;
        }

        // --- CHEAT SHEET UI ---

        function renderCheatSheet(filter = 'all') {
            const container = document.getElementById('cheatSheetGrid');
            container.innerHTML = '';
            
            // Update buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('bg-slate-200', 'text-slate-700');
                btn.classList.add('bg-white', 'text-slate-600');
                if (btn.innerText.toLowerCase().includes(filter === 'all' ? 'todos' : filter === 'daily' ? 'di√°rio' : filter === 'emergency' ? 'emerg√™ncia' : 'setup')) {
                    btn.classList.remove('bg-white', 'text-slate-600');
                    btn.classList.add('bg-slate-200', 'text-slate-700');
                }
            });

            const filtered = cheatSheetData.filter(item => filter === 'all' || item.cat === filter);

            filtered.forEach(item => {
                const div = document.createElement('div');
                div.className = 'bg-white p-4 rounded border border-slate-200 hover:border-blue-400 transition-colors group';
                
                // Color coding tags
                let tagColor = 'bg-slate-100 text-slate-600';
                if(item.cat === 'daily') tagColor = 'bg-green-100 text-green-700';
                if(item.cat === 'emergency') tagColor = 'bg-red-100 text-red-700';
                if(item.cat === 'setup') tagColor = 'bg-blue-100 text-blue-700';

                div.innerHTML = `
                    <div class="flex justify-between items-start mb-2">
                        <span class="font-mono font-bold text-slate-800 bg-slate-100 px-2 py-1 rounded text-sm group-hover:bg-blue-50 group-hover:text-blue-700 transition-colors">${item.cmd}</span>
                        <span class="text-[10px] uppercase font-bold px-2 py-0.5 rounded-full ${tagColor}">${item.cat}</span>
                    </div>
                    <p class="text-sm text-slate-500">${item.desc}</p>
                `;
                container.appendChild(div);
            });
        }

        function filterCheatSheet(cat) {
            renderCheatSheet(cat);
        }

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // --- INITIALIZATION ---
        window.addEventListener('DOMContentLoaded', () => {
            initChart();
            renderWorkflow();
            renderCheatSheet();
        });

    </script>
</body>
</html>
