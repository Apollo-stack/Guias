    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const phaseNavButtons = document.querySelectorAll('.phase-nav-btn');
            const phaseContents = document.querySelectorAll('.phase-content');
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const accordionHeaders = document.querySelectorAll('.accordion-header');
            
            let currentPhase = 1;
            const totalPhases = 4;

            function showPhase(phaseNum) {
                currentPhase = phaseNum;

                phaseContents.forEach(content => {
                    content.classList.add('hidden');
                });
                document.getElementById(`phase-${phaseNum}`).classList.remove('hidden');

                phaseNavButtons.forEach(btn => {
                    if (parseInt(btn.dataset.phase) === phaseNum) {
                        btn.classList.add('text-blue-600', 'border-blue-600');
                        btn.classList.remove('text-gray-400', 'border-transparent');
                    } else {
                        btn.classList.remove('text-blue-600', 'border-blue-600');
                        btn.classList.add('text-gray-400', 'border-transparent');
                    }
                });

                if (currentPhase === 1) {
                    prevBtn.classList.add('invisible');
                } else {
                    prevBtn.classList.remove('invisible');
                }

                if (currentPhase === totalPhases) {
                    nextBtn.textContent = 'Finalizar';
                    nextBtn.classList.add('bg-green-600', 'hover:bg-green-700');
                    nextBtn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                } else {
                    nextBtn.textContent = 'Próxima Fase';
                    nextBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
                    nextBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
                }
            }

            phaseNavButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    showPhase(parseInt(btn.dataset.phase));
                });
            });

            prevBtn.addEventListener('click', () => {
                if (currentPhase > 1) {
                    showPhase(currentPhase - 1);
                }
            });

            nextBtn.addEventListener('click', () => {
                if (currentPhase < totalPhases) {
                    showPhase(currentPhase + 1);
                } else {
                    alert('Processo concluído! Seu computador está pronto.');
                    showPhase(1);
                }
            });

            accordionHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    header.classList.toggle('active');
                });
            });

            showPhase(1);
        });
    </script>

</body>
</html>
