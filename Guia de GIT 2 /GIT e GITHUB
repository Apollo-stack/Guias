    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation scroll highlighting
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');

            window.onscroll = () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            };

            // Interactive Concepts Diagram
            const areas = {
                wd: { area: document.getElementById('wd-area'), text: document.getElementById('wd-text') },
                sa: { area: document.getElementById('sa-area'), text: document.getElementById('sa-text') },
                repo: { area: document.getElementById('repo-area'), text: document.getElementById('repo-text') }
            };

            Object.keys(areas).forEach(key => {
                areas[key].area.addEventListener('click', () => {
                    Object.values(areas).forEach(val => {
                        val.area.classList.remove('active');
                        val.text.classList.add('hidden');
                    });
                    areas[key].area.classList.add('active');
                    areas[key].text.classList.remove('hidden');
                });
            });

            // Branching Simulator
            const stepState = {
                current: 0,
                elements: {
                    stepDisplay: document.getElementById('current-step'),
                    explanation: document.getElementById('step-explanation'),
                    mainBranch: document.getElementById('main-branch'),
                    featureBranch: document.getElementById('feature-branch'),
                    featureLabel: document.getElementById('feature-label'),
                    buttons: [
                        document.getElementById('step-btn-1'),
                        document.getElementById('step-btn-2'),
                        document.getElementById('step-btn-3'),
                        document.getElementById('step-btn-4'),
                    ],
                    resetBtn: document.getElementById('reset-btn')
                },
                descriptions: [
                    "O projeto existe com um histórico inicial na branch `main`.",
                    "Uma nova branch (`feature`) é criada a partir da `main` para trabalhar em uma nova funcionalidade de forma isolada.",
                    "Você faz commits na sua `feature` branch e envia (`push`) para o repositório remoto no GitHub.",
                    "Você abre um Pull Request (PR) no GitHub. Isso inicia uma discussão para que sua equipe revise o código.",
                    "Após a aprovação, o PR é 'merged'. Suas alterações da `feature` branch são integradas de volta à `main`."
                ]
            };

            function updateStepUI() {
                const { current, elements, descriptions } = stepState;
                elements.stepDisplay.textContent = `Passo ${current}: ${elements.buttons[current-1]?.textContent.split('. ')[1] || 'Início'}`;
                elements.explanation.textContent = descriptions[current];
                
                elements.buttons.forEach((btn, index) => {
                    if (index === current) {
                        btn.disabled = false;
                        btn.classList.remove('bg-gray-400', 'cursor-not-allowed');
                        btn.classList.add('bg-blue-600', 'hover:bg-blue-700');
                    } else {
                        btn.disabled = true;
                        btn.classList.add('bg-gray-400', 'cursor-not-allowed');
                        btn.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                    }
                });

                // Update diagram based on step
                switch(current) {
                    case 1: // Create branch
                        elements.featureBranch.style.opacity = '1';
                        elements.featureLabel.style.opacity = '1';
                        break;
                    case 2: // Commit & Push
                        elements.featureBranch.style.width = '70%';
                        break;
                    case 3: // Pull Request
                        elements.featureBranch.classList.add('animate-pulse');
                        elements.mainBranch.classList.add('animate-pulse');
                        break;
                    case 4: // Merge
                        elements.featureBranch.style.opacity = '0';
                        elements.featureLabel.style.opacity = '0';
                        elements.mainBranch.style.width = '90%';
                        elements.featureBranch.classList.remove('animate-pulse');
                        elements.mainBranch.classList.remove('animate-pulse');
                        break;
                    default: // Reset
                        elements.mainBranch.style.width = '10%';
                        elements.featureBranch.style.width = '0%';
                        elements.featureBranch.style.opacity = '0';
                        elements.featureLabel.style.opacity = '0';
                        elements.featureBranch.classList.remove('animate-pulse');
                        elements.mainBranch.classList.remove('animate-pulse');
                }
            }
            
            stepState.elements.buttons.forEach((btn, index) => {
                btn.addEventListener('click', () => {
                    stepState.current = index + 1;
                    updateStepUI();
                });
            });

            stepState.elements.resetBtn.addEventListener('click', () => {
                stepState.current = 0;
                updateStepUI();
            });
            
            updateStepUI();


            // Charts.js Instances
            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) return label.join(' ');
                return label;
            };

            const commitsCtx = document.getElementById('commitsChart').getContext('2d');
            new Chart(commitsCtx, {
                type: 'bar',
                data: {
                    labels: ['Commit Monolítico', 'Commits Atômicos'],
                    datasets: [{
                        label: 'Esforço de Entendimento',
                        data: [10, 3],
                        backgroundColor: ['#DC3545', '#198754'],
                        borderRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: { display: false },
                        tooltip: { callbacks: { title: tooltipTitleCallback } }
                    },
                    scales: {
                        x: { title: { display: true, text: 'Nível de Esforço (Abstrato)' } }
                    }
                }
            });

            const branchesCtx = document.getElementById('branchesChart').getContext('2d');
            new Chart(branchesCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Desenvolvimento em Branches', 'Direto na `main` (Incorreto)'],
                    datasets: [{
                        data: [98, 2],
                        backgroundColor: ['#0D6EFD', '#FFC107'],
                        borderColor: '#F8F9FA',
                        borderWidth: 4,
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: { callbacks: { title: tooltipTitleCallback } }
                    }
                }
            });
        });
    </script>
</body>
</html>
