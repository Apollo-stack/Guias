    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Navigation scroll highlighting
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');
            window.onscroll = () => {
                let current = 'configuracao';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });
                navLinks.forEach(link => {
                    link.classList.remove('active', 'text-blue-600');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active', 'text-blue-600');
                    }
                });
            };

            // Accordion
            document.querySelectorAll('.accordion-header').forEach(header => {
                header.addEventListener('click', () => {
                    const content = header.nextElementSibling;
                    const icon = header.querySelector('span:last-child');
                    if (content.style.maxHeight) {
                        content.style.maxHeight = null;
                        icon.classList.remove('rotate-45');
                    } else {
                        document.querySelectorAll('.accordion-content').forEach(c => c.style.maxHeight = null);
                        document.querySelectorAll('.accordion-header span:last-child').forEach(i => i.classList.remove('rotate-45'));
                        content.style.maxHeight = content.scrollHeight + "px";
                        icon.classList.add('rotate-45');
                    }
                });
            });

            // Copy buttons
            document.querySelectorAll('.copy-button').forEach(button => {
                button.addEventListener('click', () => {
                    const code = button.nextElementSibling.textContent;
                    navigator.clipboard.writeText(code).then(() => {
                        button.textContent = 'Copiado!';
                        setTimeout(() => { button.textContent = 'Copiar'; }, 2000);
                    });
                });
            });

            // Simulator
            const simState = {
                pcVersion: 1,
                githubVersion: 1,
                notebookVersion: 1,
                stage: 0, // 0: synced, 1: pc edited, 2: pushed, 3: pulled
                elements: {
                    pcFile: document.getElementById('pc-file'),
                    githubFile: document.getElementById('github-file'),
                    notebookFile: document.getElementById('notebook-file'),
                    pcFiles: document.getElementById('pc-files'),
                    githubFiles: document.getElementById('github-files'),
                    notebookFiles: document.getElementById('notebook-files'),
                    status: document.getElementById('sim-status'),
                    btnEdit: document.getElementById('sim-edit-pc'),
                    btnPush: document.getElementById('sim-push'),
                    btnPull: document.getElementById('sim-pull'),
                    btnReset: document.getElementById('sim-reset'),
                }
            };
            
            function updateSimUI() {
                const { pcVersion, githubVersion, notebookVersion, stage, elements } = simState;
                elements.pcFile.querySelector('span').textContent = `v${pcVersion}`;
                elements.githubFile.querySelector('span').textContent = `v${githubVersion}`;
                elements.notebookFile.querySelector('span').textContent = `v${notebookVersion}`;

                // Reset buttons
                elements.btnEdit.disabled = true;
                elements.btnPush.disabled = true;
                elements.btnPull.disabled = true;
                [elements.btnEdit, elements.btnPush, elements.btnPull].forEach(btn => {
                    btn.classList.add('bg-gray-400', 'cursor-not-allowed');
                    btn.classList.remove('bg-blue-600', 'hover:bg-blue-700', 'bg-green-600', 'hover:bg-green-700');
                });
                
                switch(stage) {
                    case 0:
                        elements.status.textContent = `Todas as máquinas estão sincronizadas na versão ${githubVersion}.`;
                        elements.btnEdit.disabled = false;
                        elements.btnEdit.classList.remove('bg-gray-400', 'cursor-not-allowed');
                        elements.btnEdit.classList.add('bg-blue-600', 'hover:bg-blue-700');
                        break;
                    case 1:
                        elements.status.textContent = 'PC foi atualizado para v2. Agora envie para o GitHub.';
                        elements.btnPush.disabled = false;
                        elements.btnPush.classList.remove('bg-gray-400', 'cursor-not-allowed');
                        elements.btnPush.classList.add('bg-blue-600', 'hover:bg-blue-700');
                        break;
                    case 2:
                        elements.status.textContent = 'GitHub está na v2. Atualize o Notebook para sincronizar.';
                        elements.btnPull.disabled = false;
                        elements.btnPull.classList.remove('bg-gray-400', 'cursor-not-allowed');
                        elements.btnPull.classList.add('bg-green-600', 'hover:bg-green-700');
                        break;
                    case 3:
                        elements.status.textContent = `Tudo sincronizado na nova versão ${githubVersion}! Pode resetar para começar de novo.`;
                        break;
                }
            }
            
            simState.elements.btnEdit.addEventListener('click', () => {
                if (simState.stage !== 0) return;
                simState.pcVersion++;
                simState.stage = 1;
                simState.elements.pcFile.classList.add('ring-4', 'ring-yellow-400');
                updateSimUI();
            });

            simState.elements.btnPush.addEventListener('click', () => {
                if (simState.stage !== 1) return;
                const fileClone = simState.elements.pcFile.cloneNode(true);
                simState.elements.pcFiles.appendChild(fileClone);
                const rect = simState.elements.githubFiles.getBoundingClientRect();
                const startRect = fileClone.getBoundingClientRect();
                
                fileClone.style.transform = `translate(${rect.left - startRect.left + (rect.width - startRect.width)/2}px, ${rect.top - startRect.top + (rect.height - startRect.height)/2}px)`;

                setTimeout(() => {
                    simState.githubVersion = simState.pcVersion;
                    simState.stage = 2;
                    simState.elements.pcFile.classList.remove('ring-4', 'ring-yellow-400');
                    fileClone.remove();
                    updateSimUI();
                }, 500);
            });

            simState.elements.btnPull.addEventListener('click', () => {
                 if (simState.stage !== 2) return;
                const fileClone = simState.elements.githubFile.cloneNode(true);
                simState.elements.githubFiles.appendChild(fileClone);
                const rect = simState.elements.notebookFiles.getBoundingClientRect();
                const startRect = fileClone.getBoundingClientRect();
                
                fileClone.style.transform = `translate(${rect.left - startRect.left + (rect.width - startRect.width)/2}px, ${rect.top - startRect.top + (rect.height - startRect.height)/2}px)`;
                
                setTimeout(() => {
                    simState.notebookVersion = simState.githubVersion;
                    simState.stage = 3;
                    fileClone.remove();
                    updateSimUI();
                }, 500);
            });
            
            simState.elements.btnReset.addEventListener('click', () => {
                simState.pcVersion = 1;
                simState.githubVersion = 1;
                simState.notebookVersion = 1;
                simState.stage = 0;
                simState.elements.pcFile.classList.remove('ring-4', 'ring-yellow-400');
                updateSimUI();
            });
            
            updateSimUI();

        });
    </script>
</body>
</html>
